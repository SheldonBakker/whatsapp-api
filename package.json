{
  "name": "whatsapp-web-api",
  "version": "1.0.0",
  "description": "REST API wrapper for whatsapp-web.js",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "test:api": "cross-env PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true DISABLE_WEB_SECURITY=true jest tests/api.test.js --detectOpenHandles --forceExit",
    "test:multi-session": "cross-env PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true DISABLE_WEB_SECURITY=true jest tests/multi-session.test.js --detectOpenHandles --forceExit --timeout=60000",
    "test:swagger": "cross-env PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true DISABLE_WEB_SECURITY=true jest tests/swagger-validation.test.js --detectOpenHandles --forceExit",
    "test:all": "cross-env PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true DISABLE_WEB_SECURITY=true jest --detectOpenHandles --forceExit --timeout=60000",
    "test:docker": "cross-env NODE_ENV=test jest tests/docker-integration.test.js --detectOpenHandles --forceExit --timeout=300000",
    "test:docker-complete": "./test-docker-complete.sh",
    "docker:up": "docker-compose --env-file .env.production up -d",
    "docker:up-test": "docker-compose --env-file .env.test up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "swagger": "ts-node swagger.ts",
    "swagger:generate": "npm run build && npm run swagger",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^6.11.2",
    "joi": "^17.13.3",
    "node-schedule": "^2.1.1",
    "puppeteer": "^24.4.0",
    "qr-image": "^3.2.0",
    "qrcode-terminal": "^0.12.0",
    "swagger-ui-express": "^5.0.1",
    "whatsapp-web.js": "^1.26.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/node": "^22.15.30",
    "@types/node-schedule": "^2.1.7",
    "@types/qr-image": "^3.2.9",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.7",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "whatsapp",
    "whatsapp-web",
    "api",
    "wrapper",
    "rest",
    "express",
    "axios"
  ],
  "author": "Sheldon Bakker",
  "license": "MIT",
  "engines": {
    "node": ">=14.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SheldonBakker/whatsapp-api.git"
  },
  "bugs": {
    "url": "https://github.com/SheldonBakker/whatsapp-api/issues"
  },
  "homepage": "https://github.com/SheldonBakker/whatsapp-api",
  "private": false
}
